@model IEnumerable<Didly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>List of Movies</h2>
<p>
@Html.ActionLink("New Movie", "Create", "Movies", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>Movies not avaialble</p>
}
else
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> Movies</th>
                <th>Genre</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Genre.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null)
                        @Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, null)
                        @Html.ActionLink("Delete", "Delete", "Movies", new { id = movie.Id }, null)
                    </td>
                </tr>
            }

        </tbody>
    </table>
}